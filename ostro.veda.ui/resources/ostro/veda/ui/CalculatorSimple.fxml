<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    <TextField editable="false" fx:id="expressionTextField"/>
    <HBox>
        <Button text="7" fx:id="numSeven"/>
        <Button text="8" fx:id="numEight"/>
        <Button text="9" fx:id="numNine"/>
        <Button text="*" fx:id="operationMultiply"/>
    </HBox>
    <HBox>
        <Button text="4" fx:id="numFour"/>
        <Button text="5" fx:id="numFive"/>
        <Button text="6" fx:id="numSix"/>
        <Button text="/" fx:id="operationDivision"/>
    </HBox>
    <HBox>
        <Button text="1" fx:id="numOne"/>
        <Button text="2" fx:id="numTwo"/>
        <Button text="3" fx:id="numThree"/>
        <Button text="-" fx:id="operationSubtraction"/>
    </HBox>
    <HBox>
        <Button text="0" fx:id="numZero"/>
        <Button text="+" fx:id="operationSum"/>
    </HBox>
</VBox>
